<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Picture</th>
    <th>Nick</th>
    <th>Uid</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.picture %></td>
    <td><%= user.nick %></td>
    <td><%= user.uid %></td>
  </tr>
<% end %>
</table>

<br />
